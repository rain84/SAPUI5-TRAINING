<mvc:View
  controllerName="app.controller.HelloPanel"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  displayBlock="true"
  >

 <Panel
    headerText="{i18n>helloPanelTitle}"
    class="sapUiResponsiveMargin"
    width="auto"
    >
      <content>
        <Button
          text="{i18n>showHelloButtonText}"
          press="onShowHello"
          class="sapUiSmallMarginEnd myCustomButton"
        />

        <Input
          value="{/recipient/name}"
          descrition="Hello {/recipient/name}"
          valueLiveUpdate="true"
          width="60%"
        />

        <Text text="Hello {/recipient/name}" class="sapUiSmallMargin sapThemeHighlight-asColor myCustomText"/>
      </content>
  </Panel>

</mvc:View>
